.insaid
  position relative
  overflow hidden
  &__top
    background url('../img/insaid/topbg.jpg') 
    background-size cover
    text-align right
    font-size 0
    line-height 0    
    max-height 970px
    box-sizing border-box    
    &:after
      content ''
      display table 
      clear both
    +density(2)
      background-image url('../img/insaid/topbg@2x.jpg') 
    +a($m)
      padding-top 274px
      padding-bottom 199px
      background-position center
    +b($m)
      padding-top 144px
      padding-right 29%
      padding-bottom 42px
      background-position calc(50% - 64px)
      min-height 655px
    .container
      +a($t)
        width 1024px
    &-text
      position relative  
      vertical-align top
      text-align left
      +a($m)
        display inline-block
        max-width 618px
        min-width 50%
        box-sizing border-box
        margin-right calc(50% - 115px)
      +btw($m, $t)        
        margin-right calc(50% - 25px)
      +b($m)
        display block
        padding 0 13px
        min-width 200px
      &-title
        font-family 'Bad Script', Arial, sans-serif
        letter-spacing -1.6px
        word-spacing 5px
        transform scaleX(1.2)  
        +a($t)
          font-size 45px 
          line-height 52px
          margin-left 42px
          max-width 416px
        +btw($m, $t) 
          font-size 40px 
          line-height 48px
          margin-left 19px
          max-width 200px
        +b($m)   
          font-size 31px 
          line-height 34.7px
          max-width 200px
          margin-left 19px
      &-subtitle  
        color $green
        text-transform uppercase
        +a($t)
          font-size 31.25px 
          line-height 35px 
          margin-top 53px
          margin-bottom 40px
        +btw($m, $t) 
          font-size 25px 
          line-height 30px 
          margin-top 45px
          margin-bottom 35px
        +b($m)
          font-size 21px 
          line-height 23px 
          margin-top 28px
      &-content
        +a($m)
          font-size 27px
          line-height 31px
        +btw($m, $t) 
          font-size 22px 
          line-height 28px 
        +b($m)
          font-size 18px
          line-height 21px
          margin-top 21px
          max-width 360px
        b 
          display block
          font-weight normal
          text-transform uppercase
  &__free
    background url('../img/insaid/freebg.jpg') 
    background-size cover
    text-align center
    height 970px
    box-sizing border-box 
    background-attachment fixed
    +density(2)
      background-image url('../img/insaid/freebg@2x.jpg')   
    +a($m)
      height 970px
    +b($m)
      height 654px
    &-text
      padding-top 68px 
      color #0d0d0d
      &-title
        font-family 'Bad Script', Arial, sans-serif
        letter-spacing -1.6px
        word-spacing 5px
        transform scaleX(1.2)  
        +a($m)
          font-size 45px 
          line-height 52px
          margin-bottom 31px
        +b($m)   
          font-size 31px 
          line-height 34.7px
          margin-bottom 21px
      &-content
        +a($m)
          font-size 27px
          line-height 31px
          max-width 650px
          margin 0 auto
        +b($m)
          font-size 18px
          line-height 18px
          max-width 360px
          margin 0 auto
    &-flowers
      position absolute
      top 392px
      left calc(50% + 253px)
      +b($m) 
        display none
    &-map
      +a($m)
        margin 224px auto 0
        width 354px
      +b($m)
        margin 48px auto 0
        width 208px
      img 
        width 100%
      