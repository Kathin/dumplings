.main 
  position relative
  overflow hidden   
  &:before
    content ''
    display block
    position absolute
    top 0
    z-index 3
    +a($t)
      right calc(50% + 277px)
    +btw($m, $t)
      right 77%
    +a($m)
      width 751px
      height 1135px
      background-image url('../img/mainbg1.png')
      background-size 751px 1135px
      +density(2)
        background-image url('../img/mainbg1@2x.png')    
    +b($m)
      left 0
      width 144px
      height 707px
      background-image url('../img/mainbg1_m.png')
      background-size 144px 707px
      +density(2)
        background-image url('../img/mainbg1_m@2x.png')
      +density(3)
        background-image url('../img/mainbg1_m@3x.png')
  &:after
    content ''
    display block
    position absolute
    top 0
    +a($t)
      left calc(50% + 288px)
    +btw($m, $t)
      left 78.15%
    +a($m)
      width 748px
      height 1235px
      background-image url('../img/mainbg2.png')
      background-size 748px 1235px
      +density(2)
        background-image url('../img/mainbg2@2x.png')
    +b($m)
      right 0
      width 164px
      height 683px
      background-image url('../img/mainbg2_m.png')
      background-size 164px 683px
      +density(2)
        background-image url('../img/mainbg2_m@2x.png')
      +density(3)
        background-image url('../img/mainbg2_m@3x.png')
  &__top
    text-align center  
    box-sizing border-box
    position relative
    width 100%
    overflow visible
    overflow-x hidden 
    background url('../img/blackline.png')    
    background-position center
    +a($m)
      padding-top 222px
    +b($m)
      padding-top 144px
    &-blackbox
      width 100%
      background $black
      height 270px
      margin-top -219px
      +a($m)
        height 270px
        margin-top -219px
      +b($m)
        display none
    &-title 
      position absolute
      top 40px
      color $green 
      font-family 'Bad Script', Arial, sans-serif      
      font-size 30px
      right calc(50% + 200px)
      transform skew(-20deg, 20deg)
    &-slider   
      z-index 5
      position relative
      +a($m)
        width 100%  
      +b($m)
        width calc(100% + 100px)
        left 50%
        transform translateX(-50%)
        max-width 600px
      &:before
        content ''
        display block
        position absolute
        background-image url('../img/handcraft.png')  
        +a($t)
          right calc(50% + 208px)
          top 69px 
        +btw($m, $t)
          right 71.64%
          top 7.18%
        +a($m)
          width 122px
          height 91px   
          background-size 122px 91px          
        +b($m)
          right 0
          top -19px
          margin 0 auto
          left 0
          transform rotate(35deg)
          width 74px
          height 54px   
          background-size 74px 54px
      .swiper-slide
        max-width 100%    
        img
          max-width 100%
      .swiper-button-prev
        background-image url('../img/arrow-left.png')
        left auto
        outline none
        +a($t)
          right calc(50% + 450px)
        +btw($m, $t)
          right 96.5%
        +a($m)
          width 56px
          height 132px
          background-size 56px 132px
          margin-top -66px
        +b($m)
          left 50px
          width 32px
          height 75px
          background-size 32px 75px
          margin-top -37.5px
      .swiper-button-next
        background-image url('../img/arrow-right.png')
        right auto
        outline none
        +a($t)
          left calc(50% + 450px)
        +btw($m, $t)
          left 96.5%
        +a($m)
          width 56px
          height 132px
          background-size 56px 132px
          margin-top -66px
        +b($m)
          right 50px
          width 32px
          height 75px
          background-size 32px 75px
          margin-top -37.5px
  &__remember
    text-align center
    +a($m)
      padding-bottom 135px
    +b($m)
      padding 118px 20px 30px
    &-title
      font-family 'Bad Script', Arial, sans-serif
      letter-spacing -1.6px
      word-spacing 5px
      transform scaleX(1.2)  
      +a($m)
        font-size 45px 
        line-height 36px
      +b($m)   
        font-size 31px 
        line-height 24px
    &-subtitle  
      color $green
      text-transform uppercase
      +a($m)
        font-size 31.25px 
        line-height 35px 
        margin-top 40px
      +b($m)
        font-size 19.44px 
        line-height 23px 
        margin-top 28px
    &-text 
      +a($m)
        font-size 27px
        line-height 31px
      +b($m)
        font-size 18px
        line-height 18px
      p 
        margin 0 auto
        +a($m)
          max-width 740px
          margin-top 35px
        +b($m)
          margin-top 18px
          max-width 500px
    &-dumpling
      position relative
      +a($m)
        padding-top 150px
      +b($m)
        padding-top 50px
      &-img 
        margin 0 auto
        max-width 593px
        +b($m)
          width 256px
        img 
          width 100%
      &-slider
        position absolute
        top -20px        
        margin 0 auto
        left 0
        right 0
        +a($m)
          width 228px
        +b($m)
          width 126px
        img 
          width 100%
  &__real
    position relative
    z-index 2
    +a($m)
      background url('../img/blackline.png') 
      background-position center
    &:after
      content ''
      display table 
      clear both
    .container
      box-sizing border-box
      +a($d)
        padding 142px 148px 110px 0
      +btw($t, $d)
        padding 142px 28px 110px 0
        width 1024px
      +btw($m, $t)
        padding 105px 10px 110px 0
        width 768px
      +a($m)
        display flex
        flex-direction column
        align-items flex-end
      +b($m)
        padding 0 
    &-bg1
      position absolute    
      z-index 1
      +a($m)
        background url('../img/realbg1.png')
        width 288px
        height 773px
        background-size 288px 773px   
        top 171px
        right calc(50% + 596px)
        +density(2)
          background-image url('../img/realbg1@2x.png')
      +b($m)
        background url('../img/realbg1_m.png')
        width 62px
        height 141px
        background-size 62px 141px   
        bottom -11px
        right 9px
        +density(2)
          background-image url('../img/realbg1_m@2x.png')
    &-bg2
      position absolute
      z-index 1
      +a(1085px)  
        left calc(50% + 420px)
      +btw($t, 1085px)
        left calc(50% + 384px)
      +a($t)
        top -103px
        background url('../img/realbg2.png')
        width 608px
        height 1151px
        background-size 608px 1151px 
        +density(2)
          background-image url('../img/realbg2@2x.png')
      +btw($m, $t)
        left calc(50% + 316px)
        background-image url('../img/realbg2@2x.png')
        width 433px
        height 820px
        background-size 433px 820px
        top -40px
        +density(2)
          background-image url('../img/realbg2@2x.png')
      +b($m)
        top -286px
        background url('../img/realbg2_m.png')
        width 224px
        height 546px
        background-size 224px 546px
        right -131px
        +density(2)
          background-image url('../img/realbg2_m@2x.png')
    &-text
      z-index 2
      +a($t)
        max-width 360px
      +btw($m, $t)
        max-width 255px
      +b($m)
        position relative
        padding 59px 83px 40px 47px
        background url('../img/blackline.png') 
        background-position center
      &-title
        font-family 'Bad Script', Arial, sans-serif
        letter-spacing -1.6px
        word-spacing 5px
        transform scaleX(1.2)  
        max-width 100%
        +a($t)
          font-size 45px 
          line-height 36px
          margin-left 32px
          margin-bottom 49px
        +b($t)   
          font-size 31px 
          line-height 24px
          margin-bottom 32px
          margin-left 18px
          width 170px
      p
        +a($t)
          font-size 27px
          line-height 31px
        +b($t)
          font-size 18px
          line-height 21px
    &-about
      z-index 2
      box-sizing border-box
      +a($t)
        max-width 360px
      +btw($m, $t)
        max-width 255px
        margin-top 40px
      +a($t)
        font-size 27px
        line-height 31px
        margin-top 64px
        padding-right 10px
      +b($t)
        font-size 18px
        line-height 21px
        padding-right 10px
      +b($m)
        position relative
        margin-top 26px
        padding 0 83px 75px 47px
      &-title
        color $green
        font-weight 700
    &-sticker
      position absolute
      z-index 3
      +a($t)
        width 152px
        top 117px
        right calc(50% - 48px)
      +btw($m, $t)
        width 130px
        top 88px
        right calc(50% - 85px)
      +b($m)
        width 84px
        top 51px
        right 38px
      img 
        width 100%
    &-product
      z-index 2
      +a(1135px)
        width 980px
      +btw($t, 1135px)
        width 900px
      +a($t)  
        right calc(50% - 195px)
      +btw($m, $t)
        width 700px
        right calc(50% - 168px)
      +a($m)
        position absolute
        top 0
      +b($m)
        position relative
        margin-top -36px
        left -16px
        width 392px
      img 
        width 100%
  &__separator
    background-image url('../img/bgseparator.png')
    background-size 2048px
    background-position center
    background-attachment fixed
    position relative
    z-index 1
    +density(2)
      background-image url('../img/bgseparator@2x.png')          
    +a($m)
      height 976px
    +b($m)
      height 660px
      
      