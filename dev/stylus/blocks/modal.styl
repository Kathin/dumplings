.modal
  background #fff
  text-align left
  transition 0.35s ease-in-out
  border-radius 11px
  position relative
  line-height 0
  font-size 0  
  overflow hidden
  max-width 1150px
  +b($d)
    width calc(100vw - 48px)
  +a($m)
    display flex
  +b($m)
    display block
  &__close
    position absolute
    top 20px
    right 20px
    width 13px
    height 13px
    background url(../img/cross.png) no-repeat
    background-size 100%
    cursor pointer
    opacity 0.4
    z-index 4
    &:hover
      opacity 1
  &__img
    position relative
    overflow hidden
    align-self center
    +a($d)
      width 622px
      height 575px
      display inline-block
      vertical-align top
    +btw($t, $d)
      width calc(100% - 528px)
      padding-top calc((100% - 528px)*0.92)
      display inline-block
      vertical-align top
    +btw($m, $t)
      width calc(100% - 405px)
      padding-top calc((100% - 405px)*0.92)
      display inline-block
      vertical-align top
    +b($m)
      display block
      width 100%
      padding-top 60%
    img 
      position absolute
      display block
      vertical-align middle    
      margin 0 auto 
      right 0
      left 0
      width 100%
      top 0
      +b($m)
        display block
        top 50%
        transform translateY(-50%)
  &__content
    display inline-block
    vertical-align top
    box-sizing border-box
    z-index 2
    +a($d)
      min-height 575px
    +a($t)
      width 528px
      padding 72px 105px 70px 53px
    +btw($m, $t)
      width 405px
      padding 50px 35px 70px 35px
    +b($m)
      width 100%
      padding 50px 35px 80px 35px
      display block
      position relative
    &-subtitle
      font-size 16px
      line-height 18px
    &-title
      font-size 30px
      font-weight bold
      margin-top 10px
      line-height 24px
    &-share
      position absolute
      cursor pointer
      opacity 0.4
      width 19px
      height 21px
      +a($t)
        top 74px
        right 112px
      +b($t)
        top 52px
        right 45px
      &:hover
        opacity 1   
      img 
        width 100%
        height 100%   
    p 
      font-size 16px
      line-height 19px
      color $gray
      margin-top 15px
    &-download
      margin-top 35px
      &-title
        font-size 16px
        line-height 18px
        margin-bottom 21px
        font-weight bold
      &-button
        border 1px solid #6841f2
        border-radius 31.5px 
        font-size 16px
        line-height 20px
        padding 8px 22px 8px 53px
        color #6841f2
        position relative
        +a($m)
          display inline-block
          & + & 
            margin-left 17px
        +b($m)
          display block
          margin-bottom 10px
        img
          position absolute
          top 50%
          transform translateY(-50%)
          left 22px
    &-make
      position absolute
      bottom 0px
      right 0px
      background #e5e7ec
      height 67px
      line-height 0
      font-size 0
      text-align center 
      +a($t)  
        width 528px  
      +btw($m, $t)
        width 405px
      +b($m)
        width 100%
      &-title
        color $black
        display inline-block
        vertical-align top  
        line-height 67px
        +a($t)  
          width 416px  
          font-size 16px 
        +btw($m, $t)
          width 325px  
          font-size 15px
        +b($m)
          width calc(100% - 80px)
          font-size 15px
      &-button
        color #fff 
        background #6841f2
        display inline-block
        vertical-align top
        line-height 67px
        +a($t)  
          width 112px
          font-size 16px  
        +b($t)
          width 80px  
          font-size 15px    
  &__message
    color $black
    font-size 20px
    text-align center
    line-height 24px
    font-weight bold
    padding 72px
    margin 0 auto
    img 
      width 100px
      margin-top 40px

      