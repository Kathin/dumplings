.topnav
  display block !important
  background-size cover
  background-position center
  color #ffffff 
  padding-top 35px
  height 77px
  width 100%
  position absolute
  top 0
  left 0
  z-index 8
  box-sizing border-box
  text-align center
  +a($m)
    padding 35px 40px 0
  +b($m)
    padding 35px 20px 0
  &__logo
    max-width 363px
    display inline-block
    margin 0 53px
    img 
      width 100%
  &__list 
    display inline-block
    text-align right
    &:last-child
      text-align left      
    &-item 
      font-size 18.75px
      line-height 17.71px
      text-transform uppercase
      display block
      color #ffffff 
      margin-top 17.71px
      &:hover
        text-decoration none
        color $green
  &__burger
    width 38px
    height 39px
    position absolute
    cursor pointer
    background $black
    z-index 7
    vertical-align middle
    text-align center
    font-size 0    
    line-height 39px
    top 0
    left 0
    +a($m)
      display none
    +b($m)
      display inline-block      
      vertical-align top      
    img 
      width 22px
      height 19px
      vertical-align middle
      text-align center
  &__phone
    position absolute   
    background $black
    color #726f6f
    text-align left
    top 0
    padding 5px
    box-sizing border-box
    cursor pointer
    transition $speed all
    +a($t)
      left calc(50% + 328px) 
    +btw($m, $t)
      right 0
    +a($m)
      font-size 16.67px
      line-height 16.67px
      border-radius 0 0 5px 5px
      width 143px
      height 44px
    +b($m)
      right 0
      font-size 0
      line-height 0
      width 38px
      height 39px
    &:hover 
      text-decoration none
      color $green
      &:after
        background-image url(../img/phone_green.png)
    &:after
      content ''
      width 23px
      height 28px
      background-size cover
      position absolute
      +a($m)
        background-image url(../img/phone.png)
        top 9px
        right 5px
      +b($m)
        background-image url(../img/phone_green.png)
        top 50%
        transform translateY(-50%) translateX(-50%)
        left 50%
      