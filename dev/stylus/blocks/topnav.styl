.topnav
  display block !important
  background-size cover
  background-position center
  color #ffffff 
  width 100%
  position absolute
  top 0
  left 0
  z-index 8
  box-sizing border-box
  text-align center
  +a($m)
    padding 15px 0 0
  +b($m)
    padding 18px 0
  &__logo
    display inline-block
    +a($m)
      max-width 363px
      margin 0 53px
    +b($m)
      max-width 204px
    img 
      width 100%
  &__list 
    display inline-block
    +a($m)
      text-align right
    +b($m)
      top 0
      position fixed
      padding 66px 0 28px
      left -100%
      transition $speed all   
      width 100%
      text-align center
      background #000
      &:after
        content ''
        width 100%
        top 100%
        height calc(100vh - 346px)
        position absolute
        background #000
        opacity 0.5
        display block
    &:last-child
      text-align left      
    &-item 
      text-transform uppercase
      display block 
      +a($m)
        font-size 18.75px
        line-height 17.71px
        margin-top 17.71px
      +b($m)
        font-size 17px
        line-height 42px
      a      
        color #ffffff       
        &:hover
          text-decoration none
          color $green
  &__burger
    width 38px
    height 39px
    position absolute
    cursor pointer
    background $black
    z-index 7
    vertical-align middle
    text-align center
    font-size 0    
    line-height 39px
    top 0
    left 0
    +a($m)
      display none
    +b($m)
      display inline-block      
      vertical-align top      
    img 
      width 22px
      height 19px
      vertical-align middle
      text-align center
  &__phone
    position absolute   
    background $black
    color #726f6f
    text-align left
    top 0
    padding 5px
    box-sizing border-box
    cursor pointer
    transition $speed all
    +a($t)
      left calc(50% + 328px) 
    +btw($m, $t)
      right 0
    +a($m)
      font-size 16.67px
      line-height 16.67px
      border-radius 0 0 5px 5px
      width 143px
      height 44px
    +b($m)
      right 0
      font-size 0
      line-height 0
      width 38px
      height 39px
    &:hover, &:active 
      text-decoration none
      color $green
      &:after
        background-image url(../img/phone_green.png)
    &:after
      content ''
      width 23px
      height 28px
      background-size cover
      position absolute
      background-image url(../img/phone.png)
      +a($m)
        top 9px
        right 5px
      +b($m)
        top 50%
        transform translateY(-50%) translateX(-50%)
        left 50%
      