.topnav
  display block !important
  background-size cover
  background-position center
  color $black  
  padding-top 35px
  height 77px
  width 100%
  position absolute
  top 0
  left 0
  z-index 8
  box-sizing border-box
  +a($m)
    padding 35px 40px 0
  +b($m)
    padding 35px 20px 0
  a 
    color $black
    +b($t)
      color #ffffff
    &:hover
      color $purple
      text-decoration none
      +b($t)
        opacity 0.7
        color #ffffff
  .container
    position relative
    height 77px
    transition height $speed
    &:after
      content ""
      display table
      width 100%
      font 0/0 'a'  
  &__burger
    width 28px
    height 18px
    border-top 2px solid $purple
    position relative
    cursor pointer
    &:before
      content ''
      display block
      width 20px
      height 2px
      background $purple
      position absolute
      top 7px
      left 0
    &:after
      content ''
      display block
      width 28px
      height 2px
      background $purple
      position absolute
      bottom 0
      left 0
    img 
      opacity 0
    +a($t)
      display none
    +b($t)
      display inline-block      
      vertical-align top
      margin-top 7px
      float right
  &__logo
    display inline-block
    will-change width
    position relative
    overflow hidden
    transition-property all
    transition-duration $speed * 2
    font-size 31px
    font-weight bold
    color $purple
    line-height 42px    
    vertical-align baseline  
    +a($d)
      width 313px 
      margin-top -24px 
    +b($d)
      width 234px  
      margin-top -12px  
    &:hover 
      opacity 0.7
      color $purple
    img 
      width 100%
  &__list 
    line-height 0 
    +a($t) 
      float right
    +b($t)
      position fixed
      top 0 
      width 100%
      background #fff url(../img/bg_top.png) no-repeat
      background-position -250px 0
      height 100vh
      left 0
      padding 50px 60px
      box-sizing border-box
      display flex
      flex-direction column
      align-items center
      justify-content flex-start    
      top 0
      bottom 0
      right 0
      left 0 
      overflow auto
      left -100%
    &-item
      line-height 42px
      font-size 16px
      vertical-align baseline
      transition all $speed
      display inline-block
      +a($t) 
        margin 0 0 0 45px
      +b($t)
        margin-top 10px
        width 120px
        text-align left
        text-transform uppercase
      &.-active
        color $purple
        +b($t)        
          color #ffffff
          text-decoration underline
      &.-translate
        display none
      &-language
        display none
        &.-active 
          display block
      &.-enter
        height 42px
        border 1px solid $purple
        border-radius 21px
        padding 0 20px
        box-sizing border-box  
        color $purple
        text-align center
        text-shadow none
        +b($t)
          border 1px solid #fff
          color #ffffff
          &:hover
            opacity 1
            border 1px solid #fff
            background #fff
            color $purple
        &:hover 
          background $purple
          color #fff
          +b($t)
            opacity 1
            border 1px solid #fff
            background #fff
            color $purple
    &-close
      position absolute
      top 20px 
      right 20px
      cursor pointer
      opacity 0.6   
      +a($t)
        display none
      +b($t)
        display inline-block   
  &.-main 
    color #ffffff
    a.topnav__list-item 
      color #ffffff
      +b($d)      
        text-shadow 0px 1px 7px $purple 
      &:hover
        opacity 0.7
        color #ffffff
      &.-enter
        border 1px solid #fff
        color #ffffff        
        text-shadow none
        &:hover
          opacity 1
          border 1px solid #fff
          background #fff
          color $purple
    .topnav__logo
      color $purple
      &:hover
        color $purple    
    .topnav__burger
      border-top 2px solid #fff
      &:before
        background #fff
      &:after
        background #fff    
       
    